(define (domain cb)
    (:requirements :del :typing :ontic-actions (:max-modal-depth 3)
                       :modal-preconditions
    )

    (:action-type-libraries ma_star)

    (:types agent peschereccio - object Giulio - agent)

    (:predicates (tails)
                 (opened ?box)
                 (looking ?i - agent)
                 (has_key ?i)
    )

    (:action open
        :parameters (?ag - agent)
        :precondition (and (has_key ?ag) [?ag](not (opened)))    ; [?ag]
        :action-type (ontic
                        (~effects (opened))
                     )
        :observability-conditions
            (and
                (always ?ag Fully)
                (forall (?ag2 - agent)
                    (if (looking ?ag2) ?ag2 Fully)
                    (else              ?ag2 Oblivious)
                )
            )
    )
)
